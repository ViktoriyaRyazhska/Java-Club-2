<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- IMPORTANT!!! DO NOT ACCEPT THIS FILE AS CONFIG FOR HIBERNATES!!! CREATE COPY AND DON'T ADD IT TO PROJECT!!! -->
<hibernate-configuration>
    <session-factory>
        <!-- DB connection -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/library?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC&amp;useSSL=false</property>
        <property name="hibernate.connection.username">root</property>
            <!-- TODO: YOUR PASSWORD HERE -->
        <property name="hibernate.connection.password"></property>

        <!-- Another properties -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>

        <!-- create|update|validate -->
        <property name="hbm2ddl.auto">update</property>

        <!-- Mapping -->
<!--         <mapping class="com.library.User"/> -->

    </session-factory>
</hibernate-configuration>